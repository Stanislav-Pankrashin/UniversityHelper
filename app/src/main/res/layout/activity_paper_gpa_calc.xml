<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.self_employed.stase.universityhelper.PaperGpaCalc">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="344dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentTop="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoBlurb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This page allows you to calculate the grades you need in all components of a paper to get a certain grade" />

                <LinearLayout
                    android:id="@+id/labsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/labs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/labTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Number of labs/tutorials" />

                        <Spinner
                            android:id="@+id/labSpinner"
                            android:layout_width="98dp"
                            android:layout_height="match_parent" />

                        <ToggleButton
                            android:id="@+id/toggleButton"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"

                            android:onClick="toggleElementsVisibility"
                            android:text="ToggleButton"
                            android:textOff="▼"
                            android:textOn="▲" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/labElementContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/assignmentsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/assignments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/assignmentsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Number of Assignments" />

                        <Spinner
                            android:id="@+id/assignmentSpinner"
                            android:layout_width="96dp"
                            android:layout_height="match_parent" />

                        <ToggleButton
                            android:id="@+id/toggleButton5"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"

                            android:onClick="toggleElementsVisibility"
                            android:text="ToggleButton"
                            android:textOff="▼"
                            android:textOn="▲" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/assignmentElementContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/testsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tests"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/testsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Number of Tests" />

                        <Spinner
                            android:id="@+id/testSpinner"
                            android:layout_width="94dp"
                            android:layout_height="match_parent" />

                        <ToggleButton
                            android:id="@+id/toggleButton3"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"

                            android:onClick="toggleElementsVisibility"
                            android:text="ToggleButton"
                            android:textOff="▼"
                            android:textOn="▲" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/testElementContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/examsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/exams"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/examsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Number of Exams" />

                        <Spinner
                            android:id="@+id/examSpinner"
                            android:layout_width="94dp"
                            android:layout_height="match_parent" />

                        <ToggleButton
                            android:id="@+id/toggleButton4"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"

                            android:onClick="toggleElementsVisibility"
                            android:text="ToggleButton"
                            android:textOff="▼"
                            android:textOn="▲" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/examElementContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/targetGradeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target Grade: B-" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="3"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/calculateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate Unknowns" />

            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currently you are at an NA(NA%)" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
